</head>

<%= form_for(@user) do |f| %>
 <% if @user.errors.any? %>
 <div id="errorExplanation">
   <h2><%= pluralize(@user.errors.count, "error") %> 
prohibited this user from being saved:</h2>
   <ul>
   <% @user.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
   </ul>
 
 </div>
 <% end %>

 <div class="field">
   <div class="table1"><%= f.label :email %></div><br />
   <div class="table2"><%= f.text_field :email %></div>
 </div>
 <div class="field">
   <div class="table3"><%= f.label :password %><br /></div>
   <div class="table4"><%= f.password_field :password %></div>
 </div>
 
<div class="field">
   <div class="table5"><%= f.label :password_confirmation %></div><br />
  <div class="table6"><%= f.password_field :password_confirmation %></div>
 </div>
<div class="table7">
<div class="actions">
   <%= f.submit %>
 </div>
</div>
<% end %>
 